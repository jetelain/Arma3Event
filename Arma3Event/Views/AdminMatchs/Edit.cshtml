@model Arma3Event.Models.MatchFormViewModel

@{
    ViewData["Title"] = "Modifier une opération";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Administration</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Match.MatchID" />
    @{await Html.RenderPartialAsync("_MatchForm");}
    <div class="form-group">
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ImagePicker");}
    @{await Html.RenderPartialAsync("_HtmlEditor");}
    <script src="~/js/matchform.js" asp-append-version="true"></script>
}
