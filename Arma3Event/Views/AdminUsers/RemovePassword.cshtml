@model Arma3Event.Entities.UserLogin

@{
    ViewData["Title"] = "Supprimer le mot de passe";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Utilisateurs</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.UserID">@Model.User.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<h3>Êtes vous sûre de vous supprimer le mot de passe de cet utilisateur ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.SteamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.SteamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
    </dl>

    <form asp-action="RemovePassword">
        <input type="hidden" asp-for="UserLoginID" />
        <input type="submit" value="Supprimer le mot de passe" class="btn btn-danger" />
    </form>
</div>
