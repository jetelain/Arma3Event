@model IEnumerable<Arma3Event.Entities.User>

@{
    ViewData["Title"] = "Utilisateurs";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<p>
    <a class="btn btn-primary" asp-action="Create">Ajouter un utilisateur</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.UserID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.UserID">Détails</a>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.UserID">Modifier</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.UserID">Supprimer</a>
            </td>
        </tr>
        }
    </tbody>
</table>
