@model Arma3Event.Entities.User

@{
    ViewData["Title"] = "Supprimer un utilisateur";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<h3>Êtes vous sûre de vouloir supprimer cet utilisateur ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteamId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteamId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrivacyOptions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrivacyOptions)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
