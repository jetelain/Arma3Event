@model Arma3Event.Entities.User

@{
    ViewData["Title"] = Model.Name;
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteamId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteamId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrivacyOptions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrivacyOptions)
        </dd>
        @if (Model.ManualLogin != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ManualLogin.Login)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ManualLogin.Login)
            </dd>
        }
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@Model.UserID">Modifier</a>
    @if (Model.ManualLogin != null)
    {
        <a class="btn btn-sm btn-secondary" asp-action="GeneratePassword" asp-route-id="@Model.UserID">Modifier le mot de passe</a>
        if (!string.IsNullOrEmpty(Model.SteamId))
        {
            <a class="btn btn-sm btn-danger" asp-action="RemovePassword" asp-route-id="@Model.UserID">Supprimer le mot de passe</a>
        }
    }
    else if (string.IsNullOrEmpty(Model.SteamId))
    {
        <a class="btn btn-sm btn-secondary" asp-action="GeneratePassword" asp-route-id="@Model.UserID">Définir un mot de passe</a>
    }
</div>
