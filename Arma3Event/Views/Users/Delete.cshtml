@model Arma3Event.Entities.User

@{
    ViewData["Title"] = "Supprimer le compte et les inscriptions";
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<h3>Êtes vous sûre de vouloir supprimer votre compte, et toutes vos inscriptions&nbsp;?</h3>
<p>Cette opération est irréversible.</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrivacyOptions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrivacyOptions)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
