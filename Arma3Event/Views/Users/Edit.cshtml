@model Arma3Event.Entities.User

@{
    ViewData["Title"] = "Modifier les informations personelles";
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivacyOptions" class="control-label"></label>
                <select asp-for="PrivacyOptions" asp-items="Html.GetEnumSelectList<Arma3Event.Entities.UserPrivacyOptions>()" class="form-control"></select>
                <span asp-validation-for="PrivacyOptions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
