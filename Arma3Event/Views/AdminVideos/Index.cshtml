@model IEnumerable<Arma3Event.Entities.Video>

@{
    ViewData["Title"] = "Vidéos";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<p>
    <a class="btn btn-primary" asp-action="Create">Ajouter une vidéo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Match.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.VideoID">Détails</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.VideoID">Modifier</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.VideoID">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
