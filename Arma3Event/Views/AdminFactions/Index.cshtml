@model IEnumerable<Arma3Event.Entities.Faction>

@{
    ViewData["Title"] = "Armées et factions";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<p>
    <a class="btn btn-primary" asp-action="Create">Ajouter une armée ou une faction</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsualSide)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <img src="@item.Flag" width="48" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsualSide)
                </td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.FactionID">Détails</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.FactionID">Modifier</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.FactionID">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
