@model Arma3Event.Entities.ContentBlock

@{
    ViewData["Title"] = "Modifier un bloc de contenu";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Contenu</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentBlockID" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Kind" class="control-label"></label>
                    <select asp-for="Kind" asp-items="Html.GetEnumSelectList<Arma3Event.Entities.ContentBlockKind>()" class="form-control"></select>
                    <span asp-validation-for="Kind" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="OrderNum" class="control-label"></label>
                    <input asp-for="OrderNum" class="form-control" />
                    <span asp-validation-for="OrderNum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ImagePicker");}
    @{await Html.RenderPartialAsync("_HtmlEditor");}
}
