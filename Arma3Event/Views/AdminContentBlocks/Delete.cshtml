@model Arma3Event.Entities.ContentBlock

@{
    ViewData["Title"] = "Supprimer un bloc de contenu";
}

@section NavBar  {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Contenu</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<h3>Êtes vous sûre de vouloir supprimer ce bloc ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kind)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kind)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNum)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ContentBlockID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
